<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/ripple"> <!-- Ripple color -->

    <item>
        <shape android:shape="rectangle">
            <corners
                android:topRightRadius="30dp"
                android:bottomRightRadius="30dp"/>

            <solid android:color="@color/mediumOrchid" /> <!-- Background color -->
        </shape>
    </item>

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/mediumOrchid" /> <!-- This can be any color, but it should match your item's background for a subtle effect -->
            <corners android:radius="30dp" /> <!-- Match the radius from your rounded_border.xml -->
        </shape>
    </item>
</ripple>