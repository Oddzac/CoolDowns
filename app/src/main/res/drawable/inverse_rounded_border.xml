<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/ripple"> <!-- Ripple color -->

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="15dp" /> <!-- Match the radius from your rounded_border.xml -->
            <stroke
                android:color="@color/background"
                android:width="2dp" /> <!-- Match the stroke from your rounded_border.xml -->
            <solid android:color="@color/textColor" /> <!-- Background color -->
        </shape>
    </item>
</ripple>